@model HPIMS_MVC_SignalR_Integrated.Models.ServerModel

@{
    ViewBag.Title = "Details";
}

<div class="container">
    <br />
    <h4 style="font-weight:600">Server Details:</h4>
    <h5 style="font-style:italic;font-weight:300">Click on the Edit button to make changes.</h5>

    <hr />
    <div style="text-align:right">
        <a class="btn btn-outline-warning" role="button" style="text-decoration:none" href="@Url.Action("Edit","Server", new {id = Model.Id})">
            Edit
        </a>
        <a class="btn btn-outline-success" role="button" style="text-decoration:none" href="@Url.Action("ServerList","Server")">
            Back to List
        </a>
    </div>
    <br />

    <div>
        <table class="table table-bordered" style="text-align:center">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Id)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ServerName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ServerType)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Location)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IsServerUp)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IsUserLoggedIn)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DriveCUsage)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DriveEUsage)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DriveFUsage)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ThresholdUsage)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IsActive)
                </th>
            </tr>
            <tr>

                <td>
                    @Html.DisplayFor(model => model.Id)
                </td>
                <td>
                    @Html.DisplayFor(model => model.ServerName)
                </td>
                <td>
                    @Html.DisplayFor(model => model.ServerType)
                </td>
                <td>
                    @Html.DisplayFor(model => model.Location)
                </td>
                <td>

                    @{
                        if (Model.IsServerUp)
                        {
                            <img src="~/Images/Icon/Up-Green.jpg" height="30" width="90" />
                        }
                        else
                        {
                            <img src="~/Images/Icon/Up-Red.jpg" height="30" width="90" />
                        }
                    }
                </td>
                <td>

                    @{
                        if (Model.IsUserLoggedIn)
                        {
                            <img src="~/Images/Icon/User-In.png" height="40" width="40" />
                        }
                        else
                        {
                            <img src="~/Images/Icon/User-Out.png" height="40" width="40" />
                        }
                    }
                </td>
                <td>
                    @Html.DisplayFor(model => model.DriveCUsage)
                </td>
                <td>
                    @Html.DisplayFor(model => model.DriveEUsage)
                </td>
                <td>
                    @Html.DisplayFor(model => model.DriveFUsage)
                </td>
                <td>
                    @Html.DisplayFor(model => model.ThresholdUsage)
                </td>
                <td>

                    @{
                        if (Model.IsActive)
                        {
                            <img src="~/Images/Icon/Active - Green.png" height="20" width="20" />
                        }
                        else
                        {
                            <img src="~/Images/Icon/Active - Red.png" height="20" width="20" />
                        }
                    }
                </td>
            </tr>
        </table>
    </div>
</div>




